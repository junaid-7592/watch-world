    <script>
        console.log('asdf')


    const timePeriodsData = <%- JSON.stringify(timePeriodsData) %>;


        

        // Initialize Charts
        function initializeCharts() {
            // Sales Line Chart
            const salesCtx = document.getElementById('salesChart').getContext('2d');
            salesChart = new Chart(salesCtx, {
                type: 'line',
                data: {
                    labels: <%- JSON.stringify(salesData.map(d => d._id)) %>,
                    datasets: [{
                        label: 'Sales',
                        data: <%- JSON.stringify(salesData.map(d => d.totalSales)) %>,
                        borderColor: '#4e73df',
                        tension: 0.1,
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2],
                                drawBorder: false,
                                color: 'rgba(0, 0, 0, 0.1)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            // Order Status Pie Chart
            const statusCtx = document.getElementById('orderStatusChart').getContext('2d');
            orderStatusChart = new Chart(statusCtx, {
                type: 'pie',
                data: {
                    labels: <%- JSON.stringify(orderStatusData.map(d => d._id)) %>,
                    datasets: [{
                        data: <%- JSON.stringify(orderStatusData.map(d => d.count)) %>,
                        backgroundColor: ['#1cc88a', '#f6c23e', '#36b9cc', '#e74a3b']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });


            // Revenue Bar Chart
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            revenueChart = new Chart(revenueCtx, {
                type: 'bar',
                data: {
                    labels: timePeriodsData['30'].labels,
                    datasets: [{
                        label: 'Sales',
                        data: timePeriodsData['30'].sales,
                        backgroundColor: '#4e73df'
                    }, {
                        label: 'Revenue',
                        data: timePeriodsData['30'].revenue,
                        backgroundColor: '#1cc88a'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2],
                                drawBorder: false,
                                color: 'rgba(0, 0, 0, 0.1)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }

        // Update all charts based on selected time period
        function updateCharts(period) {
            const data = timePeriodsData[period];

            // Update Sales Chart
            salesChart.data.labels = data.labels;
            salesChart.data.datasets[0].data = data.sales;
            salesChart.update();

            // Update Order Status Chart
            orderStatusChart.data.datasets[0].data = data.orderStatus;
            orderStatusChart.update();

            // Update Revenue Chart
            revenueChart.data.labels = data.labels;
            revenueChart.data.datasets[0].data = data.sales;
            revenueChart.data.datasets[1].data = data.revenue;
            revenueChart.update();

            // Update stats cards
            updateStatsCards(period);
        }

        // Update stats cards based on selected time period
        function updateStatsCards(period) {
            // Calculate multiplier based on period
            const multiplier = period === '7' ? 0.3 :
                period === '90' ? 2 :
                    period === '180' ? 3 : 1;

            // Update card values with animations
            animateValue('.metric-card:nth-child(1) h4', Math.round(1247 * multiplier));
            animateValue('.metric-card:nth-child(2) h4', Math.round(856 * multiplier));
            animateValue('.metric-card:nth-child(3) h4', Math.round(2453 * multiplier));
        }

        // Animate value changes in stats cards
        function animateValue(selector, endValue) {
            const element = document.querySelector(selector);
            const startValue = parseInt(element.textContent.replace(',', ''));
            const duration = 1000; // Animation duration in milliseconds
            const stepTime = 50; // Time between steps in milliseconds
            const steps = duration / stepTime;
            const increment = (endValue - startValue) / steps;

            let currentValue = startValue;
            let currentStep = 0;

            const animation = setInterval(() => {
                currentStep++;
                currentValue += increment;
                element.textContent = Math.round(currentValue).toLocaleString();

                if (currentStep >= steps) {
                    clearInterval(animation);
                    element.textContent = endValue.toLocaleString();
                }
            }, stepTime);
        }

        // Initialize charts when page loads
        document.addEventListener('DOMContentLoaded', function () {
            initializeCharts();

            // Add event listener for filter changes
            document.getElementById('dateFilter').addEventListener('change', function (e) {
                updateCharts(e.target.value);
            });
        });


        document.getElementById("dateFilter").addEventListener("change", function () {
            let filterValue = this.value;

            fetch(`/admin/sales-report?filter=${filterValue}`)
                .then(response => response.json())
                .then(data => {
                    updateSalesReport(data);
                })
                .catch(error => console.error("Error:", error));
        });



        function updateSalesReport(data) {
            let tableBody = document.getElementById("salesReportTableBody");
            tableBody.innerHTML = ""; // Old data clear cheyyuka

            data.forEach(report => {
                let row = `<tr>
                <td>${report.date}</td>
                <td>${report.totalSales}</td>
                <td>${report.totalOrders}</td>
                <td>${report.totalDiscount}</td>
                <td>${report.totalRevenue}</td>
            </tr>`;
                tableBody.innerHTML += row;
            });
        }





    </script>
